# ===============================

# SERVER CONFIGURATION

# ===============================

NODE_ENV=development

# Server Ports (for load balancing later)

SERVER_PORT=3000
SERVER_PORT_2=3001
SERVER_PORT_3=3002

SERVER_HOST=localhost

# ===============================

# DATABASE CONFIGURATION (MASTER)

# ===============================

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=yourpassword
DB_NAME=voting_system

# ===============================

# DATABASE REPLICATION (FUTURE READY)

# ===============================

# Slave 1 (Read Replica)

DB_SLAVE_1_HOST=localhost
DB_SLAVE_1_PORT=3307
DB_SLAVE_1_USER=root
DB_SLAVE_1_PASS=yourpassword

# Slave 2 (Read Replica)

DB_SLAVE_2_HOST=localhost
DB_SLAVE_2_PORT=3308
DB_SLAVE_2_USER=root
DB_SLAVE_2_PASS=yourpassword

# ===============================

# JWT AUTHENTICATION

# ===============================

JWT_SECRET=super_secret_key_change_this
JWT_EXPIRES_IN=1d

# ===============================

# OTP CONFIGURATION

# ===============================

OTP_EXPIRY_MINUTES=5

# ===============================

# DATABASE INIT CONTROL

# ===============================

DB_INIT=true

# ===============================

# DOCKER SUPPORT

# ===============================

DOCKER_DB_HOST=mysql
DOCKER_DB_PORT=3306
