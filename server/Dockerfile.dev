FROM node:20-alpine

WORKDIR /app

# Copy package.json first for caching
COPY package*.json ./

# Install dependencies + nodemon globally
RUN npm install -g nodemon
RUN npm install

# Copy the rest (won't override volume in dev)
COPY . .

# Expose port
EXPOSE 3000

# Run tests once at container start (optional)
# CMD ["sh", "-c", "npm test && nodemon --legacy-watch src/server.js"]
# Or skip tests for faster dev:
CMD ["nodemon", "--legacy-watch", "src/server.js"]
